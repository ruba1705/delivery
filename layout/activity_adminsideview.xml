<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".adminsideview">

    <RelativeLayout
        android:id="@+id/relParent"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#fece2f"
        android:padding="20dp">

        <ImageView
            android:id="@+id/back_pressed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:src="@drawable/back_btn" />

        <TextView
            android:id="@+id/profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/alegreya_sans_sc_bold"
            android:includeFontPadding="false"

            android:textSize="30sp" />


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rel1"
        android:layout_below="@+id/relParent"
        android:padding="20dp"
        >

        <LinearLayout
            android:id="@+id/line1"
            android:layout_width="372dp"
            android:layout_height="49dp">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="57dp"
                android:text="Delivery Location"
                android:textSize="15sp" />


        </LinearLayout>
        <LinearLayout
            android:id="@+id/line2"
            android:layout_width="wrap_content"
            android:layout_height="49dp"
            android:layout_below="@+id/line1">


            <TextView
                android:id="@+id/loc"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="45dp"
                android:inputType="textPersonName"
                android:padding="10dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/line3"
            android:layout_width="369dp"
            android:layout_height="60dp"
            android:layout_below="@+id/line2">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Checkpoint to be\n assigned"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/check"
                android:layout_width="193dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="41dp"
                android:inputType="textPersonName"
                android:padding="10dp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/line4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line3">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order Status"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/order"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="75dp"
                android:inputType="textPersonName"
                android:padding="10dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/line5"
            android:layout_below="@+id/line4"
            >
            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shipment Status"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/Shipped"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:inputType="textPersonName"
                android:padding="10dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/line6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line5">
            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="Intransit Status"
                />
            <EditText
                android:id="@+id/intran"
                android:padding="10dp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="58dp"
                android:inputType="textPersonName"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/line7"
            android:layout_below="@+id/line6"
            >
            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="Out For Delivery"
                />
            <EditText
                android:id="@+id/out"
                android:padding="10dp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="53dp"
                android:inputType="textPersonName"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/line8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line7">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="108dp"
                android:layout_height="39dp"
                android:text="Total Cost"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tcosts"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="53dp"
                android:inputType="textPersonName"
                android:padding="10dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/line9"
            android:paddingTop="20dp"
            android:layout_below="@+id/line8"
            >
            <Button
                android:id="@+id/update"
                android:layout_width="131dp"
                android:layout_height="58dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginLeft="100dp"
                android:text="Update"
                android:background="@color/colorPrimary"
                 />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/line10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line9"
            android:paddingTop="20dp">

            <Button
                android:id="@+id/delete"
                android:layout_width="131dp"
                android:layout_height="58dp"
                android:layout_gravity="center"
                android:layout_marginLeft="100dp"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:text="Delivered" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/line11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line10"
            android:paddingTop="20dp"/>
    </RelativeLayout>




</RelativeLayout>