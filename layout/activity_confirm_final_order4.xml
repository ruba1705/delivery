<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/mainLayout"
    android:layout_height="match_parent"
    tools:context=".CartActivity">

    <RelativeLayout
        android:id="@+id/panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/home_background"
        android:padding="20dp"
        tools:ignore="MissingConstraints">


        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:src="@drawable/back_btn" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/gfg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/panel">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="50dp"
            android:padding="10dp"
            android:text="Delivery Location"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/location"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:padding="10dp" />


    </LinearLayout>




    <LinearLayout
        android:layout_width="500dp"
        android:layout_height="50dp"
        android:layout_above="@+id/placeOrderBtn"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/browser_actions_divider_color">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TOTAL COST : "
            android:textSize="20sp"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/txtTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="11"
            android:text=""
            android:gravity="right"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>


    <Button
        android:id="@+id/placeOrderBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/colorPrimary"
        android:padding="20dp"
        android:text="PLACE ORDER" />

    <TextView
        android:id="@+id/checkpoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="updated soon"
        android:textColor="@color/home_background"
        android:visibility="invisible"
        android:textSize="1sp"
         />

    <TextView
        android:id="@+id/ordered"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Completed"
        tools:visibility="invisible"
        android:textColor="@color/home_background"
        android:textSize="1sp"
        />


    <TextView
        android:id="@+id/shipped"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Not yet"
        android:textColor="@color/home_background"
        android:textSize="1sp"
        tools:visibility="invisible" />
    <TextView
        android:id="@+id/captcha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Not yet"
        android:textColor="@color/home_background"
        android:textSize="1sp"
        tools:visibility="invisible" />
    <TextView
        android:id="@+id/intransit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Not yet"
        android:textColor="@color/home_background"
        android:textSize="1sp"
        tools:visibility="invisible" />

    <TextView
        android:id="@+id/out_for_delivery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Not yet"
        android:textColor="@color/home_background"
        android:textSize="1sp"
        tools:visibility="invisible" />

</RelativeLayout>






















